<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/supplier.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <%- include('partials/sidebar') %>
    <main>
      <div class="supplier-container">
        <h2>Supplier List</h2>
        <div class="table-controls">
          <div class="entries-controls">
            <label for="entries">Show</label>
            <select id="entries" name="entries">
              <option value="3">3</option>
              <option value="5">5</option>
              <option value="10">10</option>
            </select>
            <label for="entries">entries</label>
          </div>
          <div class="search-container">
            <input type="text" id="search" placeholder="Search" />    
          </div>
          <button class="add-supplier-btn">+ Add Supplier</button>
        </div>
        <table class="supplier-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Supplier Name</th>
              <th>Address</th>
              <th>Contact Number</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Sample Supplier 1</td>
              <td>Sample Address 1</td>
              <td>1234567890</td>
              <td><span class="status active">Active</span></td>
              <td>
                <i class="bx bx-show" title="View"></i>
                <i class="bx bx-edit" title="Edit"></i>
                <i class="bx bx-trash" title="Delete"></i>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>Sample Supplier 2</td>
              <td>Sample Address 2</td>
              <td>0987654321</td>
              <td><span class="status active">Active</span></td>
              <td>
                <i class="bx bx-show" title="View"></i>
                <i class="bx bx-edit" title="Edit"></i>
                <i class="bx bx-trash" title="Delete"></i>
              </td>
            </tr>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
        <div class="pagination">
          <button class="prev-btn">Previous</button>
          <span class="page-number">1</span>
          <button class="next-btn">Next</button>
        </div>
      </div>
    </main>

    <div id="addSupplierModal" class="modal">
      <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2 id="modalTitle">+ Add Supplier</h2> <!-- This title will change dynamically -->
        <form id="supplierForm">
          <div class="form-group">
            <label for="supplierName">Supplier Name</label>
            <input type="text" id="supplierName" name="supplierName" required />
          </div>
          <div class="form-group">
            <label for="supplierAddress">Address</label>
            <input type="text" id="supplierAddress" name="supplierAddress" required />
          </div>
          <div class="form-group">
            <label for="supplierContact">Contact Number</label>
            <input type="text" id="supplierContact" name="supplierContact" required />
          </div>
          <div class="form-group">
            <label for="supplierStatus">Status</label>
            <select id="supplierStatus" name="supplierStatus">
              <option value="Active">Active</option>
              <option value="Inactive">Inactive</option>
            </select>
          </div>
    
          <input type="hidden" id="supplierId" name="supplierId" /> <!-- Hidden field for Supplier ID -->
    
          <div class="modal-buttons">
            <button type="submit" class="add-btn">Save</button>
            <button type="button" class="cancel-btn">Cancel</button>
          </div>
        </form>
      </div>
    </div>
    
    

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/SupplierPopUp.js"></script>
  </body>
</html>
